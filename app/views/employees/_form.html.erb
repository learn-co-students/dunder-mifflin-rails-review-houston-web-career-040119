
<% if flash[:error] %>

<% flash[:error].each do |e| %>

    <%= e %><br>

<% end %>

<% end %>


<%= form_for @employee do |f| %>

    <%= f.label "First name" %> <%= f.text_field :first_name %><br>

    <%= f.label "Last name" %> <%= f.text_field :last_name %><br>

    <%= f.label :alias %> <%= f.text_field :alias %><br>

    <%= f.label :title %> <%= f.text_field :title %><br>

    <%= f.label :office %> <%= f.text_field :office %><br>

    <%= f.label :dog %> <%= f.collection_select :dog_id, Dog.all, :id, :name, selected: (@employee.dog_id||Dog.first.id) %><br>

    <%= f.label "Image URL" %><%= f.text_field :img_url %><br>

    <%= f.submit %>

<% end %>